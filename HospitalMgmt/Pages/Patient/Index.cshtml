    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientDetails[0].Patient_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientDetails[0].Patient_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientDetails[0].Patient_Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientDetails[0].Patient_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientDetails[0].Patient_Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientDetails[0].Appointments_ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PatientDetails) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointments_ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Patient_Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Patient_Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Patient_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
