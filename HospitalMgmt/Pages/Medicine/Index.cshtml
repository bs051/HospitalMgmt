        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor_ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Medicine_Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Medicine_Id">Details</a> |
