@page
@model HospitalMgmt.Pages.Appointment.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointments.Appointment_Id" />
            <div class="form-group">
                <label asp-for="Appointments.Patient_Name" class="control-label"></label>
                <input asp-for="Appointments.Patient_Name" class="form-control" />
                <span asp-validation-for="Appointments.Patient_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointments.Doctor_Name" class="control-label"></label>
                <input asp-for="Appointments.Doctor_Name" class="form-control" />
                <span asp-validation-for="Appointments.Doctor_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointments.Date" class="control-label"></label>
                <input asp-for="Appointments.Date" class="form-control" />
                <span asp-validation-for="Appointments.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
